{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2020",
        "lib": [
            "es5",
            "dom",
        ],
        "sourceMap": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "allowJs": true,
        "paths": {
            "*": [
                "node_modules/@types/*",
                "*"
            ]
        }
    },
    "include": [
        "*.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "scripts",
        "acceptance-tests",
        "webpack",
        ".temp"
    ],
    "types": [
        "typePatches"
    ],
}