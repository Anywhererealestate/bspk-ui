{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2020",
        "lib": [
            "es5",
            "dom",
        ],
        "sourceMap": true,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "declaration": true,
        "baseUrl": "./",
        "outDir": "./dist",
        "paths": {
            "*": [
                "node_modules/@types/*",
                "*"
            ]
        },
    },
    "include": [
        "src/**/*",
        "declaration.d.ts",
        ".scripts/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "acceptance-tests",
        "webpack",
        ".temp",
    ]
}