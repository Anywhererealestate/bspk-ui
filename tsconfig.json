{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2020",
        "lib": ["es5", "dom"],
        "sourceMap": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules/@types/*", "*"]
        }
    },
    "include": ["src/**/*", "declaration.d.ts", "../bspk-demo/src/components/StylesProvider.tsx"],
    "exclude": ["node_modules", "build", "dist", "scripts", "acceptance-tests", "webpack", ".temp"],
    "types": ["typePatches"],
    "ts-node": {
        "compilerOptions": {
            "allowJs": true,
            "module": "commonjs"
        },
        "include": ["*.ts"]
    }
}
