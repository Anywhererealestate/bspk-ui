{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2020",
        "lib": [
            "es5",
            "dom",
        ],
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": false,
        "baseUrl": "./",
        "rootDir": "./src",
        "outDir": "./dist",
        "paths": {
            "@components/*": [
                "src/components/*"
            ],
            "@hooks/*": [
                "src/hooks/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
        },
        "moduleDetection": "auto",
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "acceptance-tests",
        "package",
    ]
}